<% provide(:title, @project.name) %>
<%= render 'shared/mgr_header' %>

<div class="row mgr-content">
	<div class="span12">
		<h1>Project: <%= @project.name %></h1>
		<dl class="dl-horizontal">
			
			<dt>Start Date</dt>
			<dd><%= @project.start_date %></dd>
			<dt>Goal Date</dt>
			<dd><%= @project.goal_date %></dd>
		</dl>
		<br />
		<% if @project.jobs.any? %>
		
			<h3>Jobs (<%= @project.jobs.count %>)</h3>
			<table class="table table-striped">
					<thead>
						<tr>
							<th>Name</th>
							<th>SKU</th>
							<th>Fabric</th>
							<th>Prerequisites</th>
							<th>Dyed</th>
							<th>Finished</th>
							<th>Sewn</th>
							<th>Packaged</th>
							<th>Location</th>
							<th>Asking Price</th>
							<th>Sold Price</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
					<% @project.jobs.each do |job| %>
					<tr>
						<td><%= job.name %></td>
						<td><%= job.sku %></td>
						<td><%= job.fabric_id %></td>
						<td><%= job.prerequisites %><td>
						<td><%= job.died %><td>
						<td><%= job.finished %><td>
						<td><%= job.sewn %><td>
						<td><%= job.packaged %><td>
						<td><%= job.location %><td>
						<td><%= job.asking_price %><td>
						<td><%= job.sold_price %><td>
						<td><%= link_to 'Edit', edit_job_path(job) %></td>
					</tr>
					<% end %>
					</tbody>
			</table>
		
		<% end %>
		
	</div>

</div>