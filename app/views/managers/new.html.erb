<% provide(:title, 'Sign Up')%>
<%= render 'shared/mgr_header' %>
<h1>Sign Up</h1>

<div class="row mgr-content">
	<div class="span6 offset3">
		<%= form_for(@manager) do |f| %>
		
			<%= render 'shared/manager_error_messages'%>
		
			<%= f.label :name %>
			<%= f.text_field :name %>
			
			<%= f.label :email %>
			<%= f.text_field :email %>
			
			<%= f.label :password %>
			<%= f.password_field :password %>
			
			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %>
			
			<br />
			
			<%= f.submit "Create my Manager account", class: "btn btn-large btn-primary" %>
			
		<% end %>
	</div>
</div>
