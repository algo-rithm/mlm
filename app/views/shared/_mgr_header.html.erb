<header class= "navbar navbar-fixed-top">
	<div class= "navbar-inner">
		<div class= "container">
		<nav>
			<ul class= "nav pull-right">
				<li> <%= link_to "Webfront", root_path %> </li>
				<li> <%= link_to "Store", '../store' %> </li>
				<li> <%= link_to "Contacts", contacts_path %></li>
				<li id="fat-menu" class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">Clients <b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><%= link_to "Show All", clients_path %></li>
						<li><%= link_to "New Client", new_client_path %></li>
						<li class="divider"></li>
						<% @clients = Client.all %>
						<% @clients.each do |client| %>
						<li><%= link_to client.name, "/clients/#{client.id}" %></li>
						<% end %>
					</ul>
				</li>
				
				<li id="fat-menu" class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">Projects <b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><%= link_to "Show All", projects_path %></li>
						<li><%= link_to "New Project", new_project_path %></li>
					</ul>
				</li>
				
				<li id="fat-menu" class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">Jobs <b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><%= link_to "Show All", jobs_path %></li>
						<li><%= link_to "New Job", new_job_path %></li>
					</ul>
				</li>
				
				<li id="fat-menu" class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">Fabrics <b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><%= link_to "Show All", fabrics_path %></li>
						<li><%= link_to "New Fabric", new_fabric_path %></li>
					</ul>
				</li>
				
				<% if signed_in? %>
					<li> <%= link_to "Managers", managers_path %> </li>
					<li id="fat-menu" class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li><%= link_to "Profile", current_manager %></li>
							<li><%= link_to "Settings", edit_manager_path(current_manager) %> </li>
							<li class="divider"></li>
							<li><%= link_to "Sign Out", signout_path, method: "delete" %></li>
						</ul>
					</li>
				<% else %>
					<li><%= link_to "Sign in", signin_path %></li>
				<% end %>
			</ul>
		</nav>
		</div>
	</div>
</header>
				